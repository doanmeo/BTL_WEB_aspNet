@model BlogWebsite.Models.Post
@using System.Text.RegularExpressions

@{
    ViewData["Title"] = "Edit Post";

    // --- LOGIC TÁCH QUOTE VÀ NỘI DUNG ---
    string originalQuote = "";
    string editableContent = Model.Content;

    // Regex tìm đoạn Quote nằm ở đầu bài viết
    // Pattern này tìm: [QUOTE="..."] ... [/QUOTE]
    var quoteMatch = Regex.Match(Model.Content, @"^\[QUOTE="".*?""\][\s\S]*?\[\/QUOTE\]", RegexOptions.IgnoreCase);

    if (quoteMatch.Success)
    {
        originalQuote = quoteMatch.Value; // Lấy nguyên văn đoạn Quote

        // Nội dung sửa được = Tổng thể - Đoạn Quote
        editableContent = Model.Content.Replace(originalQuote, "").Trim();
    }
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light fw-bold">
                    Edit Post
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="editForm">
                        <input type="hidden" name="id" value="@Model.PostId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Content</label>

                            @if (!string.IsNullOrEmpty(originalQuote))
                            {
                                // Xử lý hiển thị Quote đẹp mắt (Bỏ thẻ [QUOTE]) để hiện trong khung preview
                                var displayQuote = originalQuote;
                                displayQuote = Regex.Replace(displayQuote, @"\[QUOTE=""(.*?)""\]", @"<small class='fw-bold text-danger'>$1 said:</small><br/><i>");
                                displayQuote = displayQuote.Replace("[/QUOTE]", "</i>");

                                <div class="alert alert-warning border-start border-4 border-warning mb-3">
                                    @Html.Raw(displayQuote)

                                    <input type="hidden" id="hiddenQuote" value="@originalQuote" />
                                </div>
                            }

                            <textarea id="editEditor" name="Content" class="form-control" rows="10">@editableContent</textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Thread" asp-action="Details" asp-route-id="@Model.ThreadId" class="btn btn-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary fw-bold">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Trước khi gửi form đi, ta gộp Quote + Nội dung mới lại
            $('#editForm').submit(function() {
                var quote = $('#hiddenQuote').val();
                var content = $('#editEditor').val();

                if (quote && quote.trim() !== "") {
                    // Gán nội dung gộp vào textarea để gửi đi
                    // Kết quả: [QUOTE]...[/QUOTE] Nội dung mới
                    $('#editEditor').val(quote + '\n\n' + content);
                }

                return true; // Cho phép submit
            });
        });
    </script>
}