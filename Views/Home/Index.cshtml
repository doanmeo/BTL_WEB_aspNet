@model IEnumerable<BlogWebsite.Models.Category>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @foreach (var category in Model)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@category.Name</h4>
                <small>@category.Description</small>
            </div>
            <table class="table table-striped table-hover mb-0">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 60%;">Forum</th>
                        <th style="width: 10%; text-align: center;">Threads</th>
                        <th style="width: 10%; text-align: center;">Posts</th>
                        <th style="width: 20%;">Last Post</th>
                    </tr>
                </thead>
                <tbody>
                    @if (category.Forums != null && category.Forums.Any())
                    {
                        @foreach (var forum in category.Forums)
                        {
                            <tr>
                                <td>
                                    <h5 class="mb-1">
                                        <a asp-controller="Forum" asp-action="Details" asp-route-id="@forum.ForumId">@forum.Name</a>
                                    </h5>
                                    <small class="text-muted">@forum.Description</small>
                                </td>
                                <td class="text-center">
                                    @* TODO: Hiển thị số lượng thread *@
                                    0
                                </td>
                                <td class="text-center">
                                    @* TODO: Hiển thị số lượng post *@
                                    0
                                </td>
                                <td>
                                    @* TODO: Hiển thị thông tin bài viết cuối *@
                                    <small>No posts yet</small>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">No forums in this category yet.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
