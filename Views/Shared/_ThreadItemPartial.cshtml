@model BlogWebsite.Models.Thread
@{
    // Tham số để xác định chế độ hiển thị: "full" hoặc "compact"
    var displayMode = ViewData["DisplayMode"]?.ToString() ?? "full";
    var isCompact = displayMode == "compact";
    
    // Kích thước avatar
    var avatarSize = isCompact ? 32 : 36;
    var avatarFontSize = isCompact ? "12px" : "14px";
    
    // Kích thước font
    var titleFontSize = isCompact ? "13px" : "15px";
    var metaFontSize = isCompact ? "11px" : "small";
    
    // Class cho list item
    var listItemClass = isCompact ? "list-group-item p-2 border-bottom" : "list-group-item p-2 d-flex align-items-start hover-bg-light";
}

<div class="@listItemClass">
    @if (isCompact)
    {
        <div class="d-flex align-items-start">
            <div class="me-2 flex-shrink-0">
                <a href="#">
                    @if (!string.IsNullOrEmpty(Model.AppUser?.UserProfile?.AvatarUrl))
                    {
                        <img src="@Model.AppUser.UserProfile.AvatarUrl" class="rounded-circle" width="@avatarSize" height="@avatarSize">
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center fw-bold" style="width:@(avatarSize)px;height:@(avatarSize)px;font-size:@avatarFontSize">
                            @(Model.AppUser?.UserName?.Length > 0 ? Model.AppUser.UserName.Substring(0, 1).ToUpper() : "?")
                        </div>
                    }
                </a>
            </div>

            <div class="flex-grow-1 min-width-0" style="font-size: @titleFontSize">
                <div class="mb-1">
                    <a asp-controller="Thread" asp-action="Details" asp-route-id="@Model.ThreadId"
                       class="text-decoration-none text-dark fw-semibold" 
                       style="font-size: @titleFontSize; line-height: 1.3; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; word-break: break-word;">
                        @Model.Title
                    </a>
                </div>

                <div class="@metaFontSize text-muted d-flex align-items-center flex-wrap" style="font-size: @metaFontSize">
                    <span class="text-danger">@Model.AppUser?.UserName</span>
                    <span class="mx-1">&bull;</span>
                    <span>@Model.CreatedAt.ToString("MMM dd")</span>
                    <span class="mx-1">&bull;</span>
                    <a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumId" 
                       class="text-muted text-decoration-none" 
                       style="font-size: @metaFontSize">
                        @Model.Forum?.Name
                    </a>
                </div>

                <div class="@metaFontSize text-muted mt-1" style="font-size: @metaFontSize">
                    <span>Replies: @((Model.Posts?.Count ?? 0) - 1 < 0 ? 0 : (Model.Posts?.Count ?? 0) - 1)</span>
                    <span class="mx-1">&bull;</span>
                    <span>Views: @Model.ViewCount</span>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="me-3 pt-1">
            <a href="#">
                @if (!string.IsNullOrEmpty(Model.AppUser?.UserProfile?.AvatarUrl))
                {
                    <img src="@Model.AppUser.UserProfile.AvatarUrl" class="rounded-circle" width="@avatarSize" height="@avatarSize">
                }
                else
                {
                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center fw-bold" style="width:@(avatarSize)px;height:@(avatarSize)px;font-size:@avatarFontSize">
                        @Model.AppUser?.UserName?.Substring(0, 1).ToUpper()
                    </div>
                }
            </a>
        </div>

        <div class="flex-grow-1 min-width-0">
            <div class="mb-1">
                <a asp-controller="Thread" asp-action="Details" asp-route-id="@Model.ThreadId"
                   class="fw-bold text-decoration-none text-dark hover-underline" style="font-size: @titleFontSize; line-height: 1.3;">
                    @Model.Title
                </a>
            </div>

            <div class="small text-muted">
                <span class="text-danger">@Model.AppUser?.UserName</span>
                <span class="mx-1">&bull;</span>
                <span title="@Model.CreatedAt">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                <span class="mx-1">&bull;</span>
                <a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumId" class="text-muted text-decoration-none hover-underline">
                    @Model.Forum?.Name
                </a>
            </div>
        </div>

        <div class="d-none d-md-block text-end px-3 small text-muted" style="min-width: 100px;">
            <div>Replies: @((Model.Posts?.Count ?? 0) - 1 < 0 ? 0 : (Model.Posts?.Count ?? 0) - 1)</div>
            <div>Views: @Model.ViewCount</div>
        </div>

        <div class="d-none d-lg-flex align-items-center text-end ps-3 border-start" style="min-width: 180px; max-width: 180px;">
            <div class="w-100">
                <div class="text-muted small mb-1">A moment ago</div>
                <div class="small text-truncate">
                    <span class="text-muted">by</span> <a href="#" class="text-dark text-decoration-none">LastUser</a>
                </div>
            </div>
            <div class="ms-2">
                <img src="https://via.placeholder.com/24" class="rounded-circle" width="24" height="24">
            </div>
        </div>
    }
</div>

