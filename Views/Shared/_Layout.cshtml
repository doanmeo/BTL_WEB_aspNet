<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"] - VOZ Clone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-sm voz-navbar">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">VOZ</a>
                
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link voz-nav-link" asp-controller="Home" asp-action="Index">Forums</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link voz-nav-link" asp-controller="Thread" asp-action="WhatsNew">Latests</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link voz-icon-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Tài khoản">
                                    <i class="fa-solid fa-user"></i> <span class="d-none d-md-inline"> @User.Identity.Name</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link voz-icon-link" href="#" title="Tin nhắn">
                                    <i class="fa-solid fa-envelope"></i>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link voz-icon-link position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Thông báo">
                                    <i class="fa-solid fa-bell"></i>
                                    <span id="notificationBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none" style="font-size: 10px;">
                                        0
                                    </span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end p-0 shadow border-0" aria-labelledby="notificationDropdown" style="width: 320px;">
                                    <div class="border-bottom px-3 py-2 small fw-bold text-muted d-flex justify-content-between align-items-center">
                                        <span>Notifications</span>
                                        <a href="javascript:void(0);" id="markAllNotificationsRead" class="text-decoration-none small">Mark all read</a>
                                    </div>
                                    <div id="notificationList" style="max-height: 320px; overflow-y: auto;">
                                        <div class="p-3 text-center text-muted small">No notifications</div>
                                    </div>
                                    <div class="border-top px-3 py-2 text-center small">
                                        <a href="#" class="text-decoration-none text-muted">View all</a>
                                    </div>
                                </div>
                            </li>
                        }
                        else 
                        {
                            <li class="nav-item">
                                <a class="nav-link voz-nav-link" asp-area="Identity" asp-page="/Account/Login">Log in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link voz-nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link voz-icon-link" href="#" id="searchDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Search">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </a>

                            <div class="dropdown-menu dropdown-menu-end p-3 shadow border-0" aria-labelledby="searchDropdown" style="width: 300px;">
                                <form asp-controller="Search" asp-action="Results" method="get">
                                    <div class="input-group">
                                        <input type="text" name="q" class="form-control" placeholder="Search threads..." required>
                                        <button class="btn btn-primary" type="submit">
                                            <i class="fa-solid fa-magnifying-glass"></i>
                                        </button>
                                    </div>
                                    <div class="form-text small mt-2 text-muted">
                                        Enter keywords to search titles.
                                    </div>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="voz-subheader">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <a asp-controller="Thread" asp-action="NewPosts" class="voz-sub-link">New posts</a>
                    <a asp-controller="Thread" asp-action="Watched" class="voz-sub-link">Watched</a>
                </div>
                <div>
                    <form asp-controller="Forum" asp-action="MarkAllRead" method="post" class="d-inline">
                        <button type="submit" class="voz-sub-link btn btn-link p-0" style="font-size: 13px;">Mark forums read</button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="modal fade" id="postThreadModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-light py-2">
                    <h5 class="modal-title fs-6 fw-bold text-secondary">Post thread in...</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-0">
                    @await Component.InvokeAsync("ForumSelector")
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container">
            &copy; 2025 - VOZ Clone
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>