@model BlogWebsite.Models.ViewModels.ReportViewModel

<div class="modal fade" id="reportPostModal" tabindex="-1" aria-labelledby="reportPostModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reportPostModalLabel">Report Post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="reportPostForm" asp-controller="Report" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="reportPostId" name="PostId" value="" />
                    <div class="form-group">
                        <label for="reportReason" class="col-form-label">Reason:</label>
                        <textarea class="form-control" id="reportReason" name="Reason" rows="5"
                                  placeholder="Please describe why you are reporting this post (e.g., spam, offensive content)."></textarea>
                        <span id="reportReasonValidation" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Submit Report</button>
                </div>
            </form>
        </div>
    </div>
</div>

