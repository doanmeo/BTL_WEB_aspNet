@model List<BlogWebsite.Models.Category>

<div class="list-group list-group-flush">
    @foreach (var cat in Model)
    {
        <div class="list-group-item bg-light fw-bold text-uppercase small text-muted pt-3 pb-1 border-0">
            @cat.Name
        </div>

        @foreach (var forum in cat.Forums.Where(f => !f.IsDeleted))
        {
            <a asp-controller="Thread" asp-action="Create" asp-route-forumId="@forum.ForumId"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-3 py-2">

                <span class="fw-semibold text-dark">@forum.Name</span>

                <span class="badge bg-light text-secondary rounded-pill fw-normal border">
                    @forum.Threads?.Count() Threads
                </span>
            </a>
        }
    }
</div>