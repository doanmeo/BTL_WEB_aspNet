@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VOZ Forum</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                @* Menu Admin có điều kiện *
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index">Manage Categories</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Forum" asp-action="Index">Manage Forums</a></li> 
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Report" asp-action="Index">Manage Reports</a></li>
                        </ul>
                    </li>
                }
            </ul>
            @* Thanh tìm kiếm (Placeholder) *
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
            @* Tích hợp _LoginPartial.cshtml *
            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>
