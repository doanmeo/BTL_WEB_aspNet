@model BlogWebsite.Models.ViewModels.ForumDetailsViewModel

@{
    ViewData["Title"] = @Model.Forum.Name;
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Forum.Name</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center">
                <h2>@Model.Forum.Name</h2>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Thread" asp-action="Create" asp-route-forumId="@Model.Forum.ForumId" class="btn btn-primary">
                        New Thread
                    </a>
                }
            </div>
            <p>@Model.Forum.Description</p>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model.Threads.Items.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 60%;">Thread</th>
                            <th style="width: 15%; text-align: center;">Views</th>
                            <th style="width: 15%; text-align: center;">Posts</th>
                            <th style="width: 10%;">Last Post</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var thread in Model.Threads.Items)
                        {
                            <tr>
                                <td>
                                    <h5 class="mb-1">
                                        <a asp-controller="Thread" asp-action="Details" asp-route-id="@thread.ThreadId">@thread.Title</a>
                                    </h5>
                                    <small class="text-muted">
                                        By @* TODO: User Name *@ on @thread.CreatedAt.ToShortDateString()
                                    </small>
                                </td>
                                <td class="text-center">@thread.ViewCount</td>
                                <td class="text-center">
                                    @* TODO: Số lượng Post trong Thread *@
                                    0
                                </td>
                                <td>
                                    @* TODO: Thông tin bài viết cuối cùng trong thread *@
                                    <small>No posts yet</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    There are no threads in this forum yet. Be the first to start one!
                </div>
            }
        </div>
    </div>

    @if (Model.Threads.TotalPages > 1)
    {
        <nav aria-label="Thread navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.Threads.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-route-id="@Model.Forum.ForumId" asp-route-page="@(Model.Threads.PageIndex - 1)">Previous</a>
                </li>
                @for (int i = 1; i <= Model.Threads.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Threads.PageIndex ? "active" : "")">
                        <a class="page-link" asp-route-id="@Model.Forum.ForumId" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.Threads.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-route-id="@Model.Forum.ForumId" asp-route-page="@(Model.Threads.PageIndex + 1)">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
