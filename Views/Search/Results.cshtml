@model List<BlogWebsite.Models.Thread>

@{
    ViewData["Title"] = "Search Results";
    var query = ViewBag.Query as string;
}

<div class="container my-4">

    <div class="mb-3 border-bottom pb-2">
        <h2 class="fw-normal text-dark">
            Search results for: <span class="fw-bold text-primary">@query</span>
        </h2>
        <small class="text-muted">Found @Model.Count results</small>
    </div>

    @if (Model.Any())
    {
        <div class="card border shadow-sm">
            <div class="list-group list-group-flush">
                @foreach (var thread in Model)
                {
                    <div class="list-group-item p-2 d-flex align-items-start hover-bg-light">

                        <div class="me-3 pt-1">
                            @if (!string.IsNullOrEmpty(thread.AppUser?.UserProfile?.AvatarUrl))
                            {
                                <img src="@thread.AppUser.UserProfile.AvatarUrl" class="rounded-circle" width="36" height="36">
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center fw-bold" style="width:36px;height:36px;font-size:14px;">
                                    @thread.AppUser?.UserName?.Substring(0, 1).ToUpper()
                                </div>
                            }
                        </div>

                        <div class="flex-grow-1 min-width-0">
                            <div class="mb-1">
                                <a asp-controller="Thread" asp-action="Details" asp-route-id="@thread.ThreadId"
                                   class="fw-bold text-decoration-none text-dark" style="font-size: 15px;">
                                    @thread.Title
                                </a>
                            </div>
                            <div class="small text-muted">
                                <span class="text-danger">@thread.AppUser?.UserName</span>
                                <span class="mx-1">&bull;</span>
                                <span>@thread.CreatedAt.ToString("dd/MM/yyyy")</span>
                                <span class="mx-1">&bull;</span>
                                <a asp-controller="Forum" asp-action="Details" asp-route-id="@thread.ForumId" class="text-muted text-decoration-none">
                                    @thread.Forum?.Name
                                </a>
                            </div>
                        </div>

                        <div class="d-none d-md-block text-end px-3 small text-muted" style="min-width: 100px;">
                            <div>Replies: @(thread.Posts.Count - 1)</div>
                            <div>Views: @thread.ViewCount</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center p-5">
            <i class="fa-solid fa-magnifying-glass fa-3x mb-3 text-muted"></i>
            <h4>No results found.</h4>
            <p class="text-muted">Try searching for something else.</p>
        </div>
    }
</div>