@model BlogWebsite.Models.ViewModels.CreateThreadViewModel
@using BlogWebsite.Data

@{
    ViewData["Title"] = "Create new thread";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Forums</a></li>
            <li class="breadcrumb-item active">@Model.ForumName</li>
        </ol>
    </nav>

    <h2 class="mb-4">Post thread in: <span class="text-primary">@Model.ForumName</span></h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="ForumId" />
        <input type="hidden" asp-for="ForumName" />

        <div class="mb-3">
            <label class="form-label fw-bold">Select Title</label>

            <div class="dropdown w-100">
                <button class="btn btn-white border w-100 text-start d-flex justify-content-between align-items-center"
                        type="button" id="titleDropdownBtn" data-bs-toggle="dropdown" aria-expanded="false"
                        style="height: 45px;">
                    <span id="selectedTitleText" class="text-muted">Select a title...</span>
                    <i class="fa-solid fa-chevron-down small text-muted"></i>
                </button>

                <div class="dropdown-menu w-100 p-2 shadow" aria-labelledby="titleDropdownBtn" style="max-height: 300px; overflow-y: auto;">

                    <div class="px-2 pb-2 border-bottom sticky-top bg-white">
                        <input type="text" class="form-control form-control-sm" id="titleSearchInput" placeholder="Type to search title..." autofocus>
                    </div>

                    <div id="titleListOptions" class="mt-2">
                        @foreach (var title in ThreadPrefixes.Titles)
                        {
                            <a class="dropdown-item title-option py-2 rounded" href="#" data-value="@title">
                                @if (title == "Báo lỗi")
                                {
                                    <i class="fa-solid fa-bug text-danger me-2"></i>
                                }
                                else if (title == "Tin tức")
                                {

                                    <i class="fa-solid fa-newspaper text-info me-2"></i>
                                }
                                else if (title == "Góp ý")
                                {

                                    <i class="fa-solid fa-comments text-success me-2"></i>
                                }
                                else
                                {

                                    <i class="fa-solid fa-tag text-muted me-2"></i>
                                }

                                @title
                            </a>
                        }
                    </div>
                </div>
            </div>

            <input type="hidden" asp-for="Title" id="realTitleInput" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label fw-bold">Content</label>

            @* Tạm thời tắt tính năng chèn ảnh, chỉ dùng textarea thuần *@
            <textarea asp-for="Content" id="threadEditor" class="form-control" rows="10" placeholder="Viết nội dung tại đây..."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>

            <div class="form-text text-muted small mt-1">
                * Hiện tại chỉ hỗ trợ đăng bài dạng văn bản. Tính năng chèn ảnh sẽ được bật lại sau.
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumId" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary px-4 fw-bold">Post Thread</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // --- LOGIC CHO DROPDOWN TIÊU ĐỀ ---
            const titleBtn = document.getElementById('titleDropdownBtn');
            const titleText = document.getElementById('selectedTitleText');
            const titleInput = document.getElementById('realTitleInput');
            const searchInput = document.getElementById('titleSearchInput');
            const options = document.querySelectorAll('.title-option');

            // 1. Xử lý khi bấm chọn một mục
            options.forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();

                    const value = this.getAttribute('data-value');
                    const htmlContent = this.innerHTML;

                    // Cập nhật giao diện nút bấm
                    titleText.innerHTML = htmlContent;
                    titleText.classList.remove("text-muted");
                    titleText.classList.add("fw-bold", "text-dark");

                    // Cập nhật giá trị vào input ẩn để gửi đi
                    titleInput.value = value;
                });
            });

            // 2. Xử lý tìm kiếm
            searchInput.addEventListener('keyup', function() {
                const filter = this.value.toLowerCase();

                options.forEach(option => {
                    const text = option.textContent.toLowerCase();
                    if (text.includes(filter)) {
                        option.style.display = "";
                    } else {
                        option.style.display = "none";
                    }
                });
            });

            // 3. Focus ô tìm kiếm khi mở menu
            titleBtn.addEventListener('shown.bs.dropdown', function () {
                searchInput.focus();
            });
        });
    </script>
}