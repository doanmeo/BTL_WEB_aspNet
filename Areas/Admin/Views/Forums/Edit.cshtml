@model BlogWebsite.Areas.Admin.Models.AdminForumFormViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/MyAdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa diễn đàn";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <p class="eyebrow">Điều chỉnh</p>
        <h2 class="text-galaxy">@Model.Name</h2>
        <p>Chỉnh sửa thông tin và trạng thái hoạt động.</p>
    </div>
    <a asp-action="Details" asp-route-id="@Model.ForumId" class="btn btn-outline-galaxy">
        <i class="mdi mdi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="galaxy-panel floating form-card">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ForumId" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" asp-items="Model.CategoryOptions" class="form-select"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="AppUserId" class="form-label"></label>
                <select asp-for="AppUserId" asp-items="Model.UserOptions" class="form-select"></select>
                <span asp-validation-for="AppUserId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-check form-switch mt-3">
            <input class="form-check-input" asp-for="IsDeleted" />
            <label class="form-check-label" asp-for="IsDeleted"></label>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-gradient">
                <i class="mdi mdi-content-save me-1"></i> Lưu
            </button>
            <a asp-action="Details" asp-route-id="@Model.ForumId" class="btn btn-outline-galaxy">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

