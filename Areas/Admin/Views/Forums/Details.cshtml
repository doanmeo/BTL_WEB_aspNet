@model BlogWebsite.Models.Forum
@{
    Layout = "~/Areas/Admin/Views/Shared/MyAdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết diễn đàn";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <p class="eyebrow">Thông tin diễn đàn</p>
        <h2 class="text-galaxy">@Model.Name</h2>
        <p class="text-muted">Chuyên mục: @Model.Category?.Name</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.ForumId" class="btn btn-gradient">
            <i class="mdi mdi-pencil-outline me-1"></i> Chỉnh sửa
        </a>
        <a asp-action="Delete" asp-route-id="@Model.ForumId" class="btn btn-outline-galaxy text-danger">
            <i class="mdi mdi-delete-outline me-1"></i> Xóa
        </a>
        <a asp-action="Index" class="btn btn-outline-galaxy">
            <i class="mdi mdi-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</div>

<div class="galaxy-panel floating detail-card">
    <dl class="detail-list">
        <div class="detail-item">
            <dt>Mô tả</dt>
            <dd>@(string.IsNullOrWhiteSpace(Model.Description) ? "Chưa cập nhật" : Model.Description)</dd>
        </div>
        <div class="detail-item">
            <dt>Quản trị viên</dt>
            <dd>@Model.AppUser?.UserName ?? "N/A"</dd>
        </div>
        <div class="detail-item">
            <dt>Ngày tạo</dt>
            <dd>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
        </div>
        <div class="detail-item">
            <dt>Trạng thái</dt>
            <dd>
                <span class="status-chip @(Model.IsDeleted ? "offline" : "online")">
                    @(Model.IsDeleted ? "Đang ẩn" : "Đang hoạt động")
                </span>
            </dd>
        </div>
    </dl>
</div>

