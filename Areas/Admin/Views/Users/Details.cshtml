@model BlogWebsite.Areas.Admin.Models.AdminUserEditViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/MyAdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <p class="eyebrow">Thông tin thành viên</p>
        <h2 class="text-galaxy">@Model.UserName</h2>
        <p class="text-muted">Xem nhanh hồ sơ và trạng thái xác thực.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gradient">
            <i class="mdi mdi-account-edit me-1"></i> Chỉnh sửa
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-galaxy text-danger">
            <i class="mdi mdi-delete-outline me-1"></i> Xóa
        </a>
        <a asp-action="Index" class="btn btn-outline-galaxy">
            <i class="mdi mdi-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</div>

<div class="galaxy-panel floating detail-card">
    <dl class="detail-list">
        <div class="detail-item">
            <dt>Tài khoản</dt>
            <dd>@Model.UserName</dd>
        </div>
        <div class="detail-item">
            <dt>Email</dt>
            <dd>@Model.Email</dd>
        </div>
        <div class="detail-item">
            <dt>Số điện thoại</dt>
            <dd>@Model.PhoneNumber ?? "Chưa cập nhật"</dd>
        </div>
        <div class="detail-item">
            <dt>Trạng thái</dt>
            <dd>
                <span class="status-chip @(Model.EmailConfirmed ? "online" : "offline")">
                    @(Model.EmailConfirmed ? "Đã xác thực" : "Chưa xác thực")
                </span>
            </dd>
        </div>
        <div class="detail-item">
            <dt>Tên hiển thị</dt>
            <dd>@Model.DisplayName ?? "Chưa cập nhật"</dd>
        </div>
        <div class="detail-item">
            <dt>Ảnh đại diện</dt>
            <dd>
                @if (!string.IsNullOrWhiteSpace(Model.AvatarUrl))
                {
                    <img src="@Model.AvatarUrl" alt="@Model.DisplayName" class="avatar-sm" />
                }
                else
                {
                    <span class="text-muted">Chưa cập nhật</span>
                }
            </dd>
        </div>
        <div class="detail-item">
            <dt>Giới thiệu</dt>
            <dd>@(string.IsNullOrWhiteSpace(Model.Bio) ? "Chưa cập nhật" : Model.Bio)</dd>
        </div>
    </dl>
</div>

