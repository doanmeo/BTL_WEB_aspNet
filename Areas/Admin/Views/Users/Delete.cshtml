@model BlogWebsite.Areas.Admin.Models.AdminUserEditViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/MyAdminLayout.cshtml";
    ViewData["Title"] = "Xóa người dùng";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <p class="eyebrow text-danger">Xóa thành viên</p>
        <h2 class="text-galaxy">@Model.UserName</h2>
        <p>Thao tác này sẽ loại bỏ hoàn toàn tài khoản khỏi hệ thống.</p>
    </div>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-galaxy">
        <i class="mdi mdi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="galaxy-panel floating detail-card">
    <dl class="detail-list">
        <div class="detail-item">
            <dt>Tên đăng nhập</dt>
            <dd>@Model.UserName</dd>
        </div>
        <div class="detail-item">
            <dt>Email</dt>
            <dd>@Model.Email</dd>
        </div>
        <div class="detail-item">
            <dt>Tên hiển thị</dt>
            <dd>@Model.DisplayName ?? "Chưa cập nhật"</dd>
        </div>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="alert alert-warning bg-transparent text-warning border-0 mb-3">
            <i class="mdi mdi-alert me-2"></i> Bạn chắc chắn muốn xóa người dùng này?
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger-galaxy">
                <i class="mdi mdi-delete-outline me-1"></i> Xóa người dùng
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-galaxy">Hủy</a>
        </div>
    </form>
</div>

