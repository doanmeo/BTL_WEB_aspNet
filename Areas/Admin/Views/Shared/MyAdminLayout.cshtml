<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/admin/assets/vendors/mdi/css/materialdesignicons.min.css"> @* Giữ nguyên nếu assets nằm trong wwwroot/admin/assets *@
    <link rel="stylesheet" href="~/admin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/admin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <!-- Phần Navbar bên trên -->
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Render/_navbar.cshtml") @* Gọi partial cho top nav *@

        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- Phần Sidebar bên trái (Menu chính) -->
            @await Component.InvokeAsync("Render") @* Gọi RenderViewComponent để render sidebar *@

            <!-- main-panel -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- Phần Footer -->
                @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Render/_footer.cshtml") @* Gọi partial cho footer *@
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <!-- plugins:js -->
    <script src="~/admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/admin/assets/js/off-canvas.js"></script>
    <script src="~/admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/admin/assets/js/misc.js"></script>
    <!-- endinject -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
