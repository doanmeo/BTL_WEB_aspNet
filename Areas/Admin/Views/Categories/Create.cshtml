@model BlogWebsite.Models.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/MyAdminLayout.cshtml";
    ViewData["Title"] = "Tạo chuyên mục";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <p class="eyebrow">Tạo mới</p>
        <h2 class="text-galaxy">Chuyên mục diễn đàn</h2>
        <p>Khởi tạo hành tinh thảo luận mới trong Voz Galaxy.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-galaxy">
        <i class="mdi mdi-arrow-left me-1"></i> Quay lại danh sách
    </a>
</div>

<div class="galaxy-panel floating form-card">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-gradient">
                <i class="mdi mdi-plus-circle-outline me-1"></i> Tạo chuyên mục
            </button>
            <a asp-action="Index" class="btn btn-outline-galaxy">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
