@model BlogWebsite.Models.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/MyAdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết chuyên mục";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <p class="eyebrow">Chi tiết chuyên mục</p>
        <h2 class="text-galaxy">@Model?.Name</h2>
        <p class="text-muted">Theo dõi thông tin và trạng thái của chuyên mục này.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-gradient">
            <i class="mdi mdi-pencil-outline me-1"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-galaxy">
            <i class="mdi mdi-arrow-left me-1"></i> Quay lại danh sách
        </a>
    </div>
    <div class="floating-orb small"></div>
</div>

<div class="galaxy-panel floating detail-card">
    <dl class="detail-list">
        <div class="detail-item">
            <dt>Tên chuyên mục</dt>
            <dd>@Model?.Name</dd>
        </div>
        <div class="detail-item">
            <dt>Mô tả</dt>
            <dd>@Model?.Description</dd>
        </div>
        <div class="detail-item">
            <dt>Trạng thái</dt>
            <dd>
                <span class="status-chip @(Model?.IsDeleted == true ? "offline" : "online")">
                    @(Model?.IsDeleted == true ? "Đang ẩn" : "Đang sử dụng")
                </span>
            </dd>
        </div>
    </dl>
</div>
