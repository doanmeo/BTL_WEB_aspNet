@model BlogWebsite.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

@* Thêm một tiêu đề lớn *@
<h1 class="display-6">@ViewData["Title"]</h1>
<hr />

@* Sử dụng Bootstrap Card để bao bọc nội dung cho đẹp *@
<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                @* Hiển thị tên của danh mục ngay trên header *@
                <h4 class="mb-0">Thông tin: @Model.Title</h4>
            </div>
            
            <div class="card-body">
                <dl class="row">
                    @* SỬA LỖI: Bổ sung <dd> (nội dung) cho Title *@
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    @* Căn chỉnh lại cột Description *@
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    @* Căn chỉnh lại cột Slug *@
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Slug)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Slug)
                    </dd>

                    @* BỔ SUNG: Hiển thị thông tin Danh mục cha *@
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.ParentCategory)
                    </dt>
                    <dd class="col-sm-9">
                        @if (Model.ParentCategory != null)
                        {
                            @* Hiển thị Title của danh mục cha, dễ nhìn hơn là Slug *@
                            @Html.DisplayFor(model => model.ParentCategory.Title)
                        }
                        else
                        {
                            <span class="text-muted">-- Không có --</span>
                        }
                    </dd>
                </dl>
            </div>

            @* Dùng card-footer để chứa các nút hành động *@
            <div class="card-footer bg-light">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Chỉnh sửa</a>
                <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>