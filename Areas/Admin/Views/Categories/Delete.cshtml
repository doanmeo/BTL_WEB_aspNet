@model BlogWebsite.Models.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/MyAdminLayout.cshtml";
    ViewData["Title"] = "Xóa chuyên mục";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <p class="eyebrow text-danger">Xóa chuyên mục</p>
        <h2 class="text-galaxy">@Model?.Name</h2>
        <p>Hành động này sẽ ẩn toàn bộ diễn đàn trực thuộc chuyên mục.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-galaxy">
        <i class="mdi mdi-arrow-left me-1"></i> Quay lại danh sách
    </a>
</div>

<div class="galaxy-panel floating detail-card">
    <dl class="detail-list">
        <div class="detail-item">
            <dt>Tên chuyên mục</dt>
            <dd>@Model?.Name</dd>
        </div>
        <div class="detail-item">
            <dt>Mô tả</dt>
            <dd>@Model?.Description</dd>
        </div>
        <div class="detail-item">
            <dt>Trạng thái hiện tại</dt>
            <dd>
                <span class="status-chip @(Model?.IsDeleted == true ? "offline" : "online")">
                    @(Model?.IsDeleted == true ? "Đang ẩn" : "Đang sử dụng")
                </span>
            </dd>
        </div>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="CategoryId" />
        <div class="alert alert-warning border-0 bg-transparent text-warning mb-3">
            <i class="mdi mdi-alert me-2"></i> Bạn chắc chắn muốn xóa/ẩn chuyên mục này?
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger-galaxy">
                <i class="mdi mdi-delete-outline me-1"></i> Xóa chuyên mục
            </button>
            <a asp-action="Index" class="btn btn-outline-galaxy">Hủy</a>
        </div>
    </form>
</div>
